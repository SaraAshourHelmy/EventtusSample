<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/img_adapter_user"
        android:layout_width="@dimen/img_user"
        android:layout_height="@dimen/img_user"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/general_margin"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp" />


    <TextView
        android:id="@+id/tv_adapter_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/img_user"
        android:layout_margin="@dimen/general_margin"
        android:layout_toLeftOf="@+id/img_adapter_user"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_small" />

    <TextView
        android:id="@+id/tv_adapter_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_adapter_name"
        android:layout_margin="@dimen/general_margin"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_small" />

</RelativeLayout>